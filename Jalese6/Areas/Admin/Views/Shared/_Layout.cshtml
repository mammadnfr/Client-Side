<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jalese6</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Jalese6.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/jalalidatepicker.min.css" asp-append-version="true" />
    <style>
        table {
            margin-left: auto;
            margin-right: auto;
        }

        table,
        th,
        td {
            border: 2px solid black;
            border-top-right-radius: 10px;
            border-top-left-radius: 10px;
        }

        td,
        th {
            text-align: center;
        }

        th,
        td {
            padding: 15px;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home", new {Area = "Admin"})"">Jalese6</a>
                <button class=" navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                    href="@Url.Action("Form", "Home", new { Area = "Admin" })">ثبت کالا</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                    href="@Url.Action("Index", "Home", new { Area = "Admin" })">صفحه کالا</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="@Url.Action("Index", "Home")">صفحه اصلی</a>
                            </li>

                        </ul>
                    </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
                @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Jalese6
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jalalidatepicker.min.js" asp-append-version="true"></script>
                    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
