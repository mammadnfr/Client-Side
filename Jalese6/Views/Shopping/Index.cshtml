@model IEnumerable<Jalese6.Models.Product>

@{
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Picture</th>
            <th>Price</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="@item.ImagePath" style="width: 100px; height: 100px;" alt="moz"> </td>
                <td><span>@item.Price</span>تومان</td>
            </tr>
        }
    </table>
}